<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
  <h1 class='text-center'>Your Posts</h1>
  <div class="table-responsive user-table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% @post.each do |p| %>
        <tr>
          <td><%= p.title %></td>
          <td><%= p.link %></td>
          <td>  <%= link_to '', post_path(p.id), :class =>'btn btn-danger glyphicon glyphicon-trash danger',
        method: :delete,
        data: {confirm: 'Are you sure?'} %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>





  </div>
</div>